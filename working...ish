<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Year</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

      <div class="container-fluid">
        <div class="row">
          <% @products.each do |product| %>
            <div class="col-sm">
              <th>Name</th>
              <h1><%= product.name %></h1>
              <th>Description</th>
              <p><%= product.description %></p>
              <strong>$ 42</strong>
               <%= link_to 'Show', product, class: 'btn btn-info' %>
            </div><!-- /col -->
          <% end %>
        </div>
      </div>

  </tbody>
</table>

<br>

