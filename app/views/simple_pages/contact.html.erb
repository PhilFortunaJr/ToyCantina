<h1>Contact Us</h1>

<%= flash[:notice] %>

<%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
  <div class="row">
    <div class="col-xs-12 col-md-5 col-xl-5">
      <div class="details form-block">
        <ul id="details">
          <li><i class="fas fa-map-marker-alt"></i> Kennesaw, GA USA</li>
          <li><i class="fas fa-phone"></i> (845)475-2417</li>
          <li><i class="fas fa-envelope"></i> <a href="https://mail.google.com/mail/?view=cm&fs=1&to=philjrdesigns@gmail.com" title="Opens in Gmail" id="gmail" data-toggle="tooltip" data-placement="bottom" target="_blank">PhilJrDesigns@gmail.com
          </a></li>
        </ul>
      </div>
    </div>
    <div class="col-xs-12 col-md-7 col-xl-7">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", required: "required", placeholder: "Enter Name" %>
      </div>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", required: "required", placeholder: "Enter Email" %>
      </div>
      <div class="form-group">
        <%= form.label :message %>
        <%= form.text_area :message, class: "form-control", required: "required", placeholder: "Enter Message", title: "Help me Obi-Wan Kenobi you're my only hope.", rows: 5 %>
      </div>
      <%= form.submit "Send", class: "form_label btn btn-dark" %>
    </div>
  </div>
  <% end %>
