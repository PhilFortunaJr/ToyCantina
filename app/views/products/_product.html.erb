<!-- @products.each do |product| %>  -->
<% cache product do %>
<div class="col-xs-2 col-sm-6 col-md-6 col-lg-4 product">

  <%= link_to product do %>
    <h2>
      <%=product.name%>
    </h2>
    <%= image_tag(product.image_url, class: "img-fluid") if product.image_url %>
  <% end %>


  <dl>
    <strong>Year:</strong><%= product.year %>
  </dl>
  <dl>
    <strong>Price:</strong><%= number_to_currency (product.price) %>
  </dl>
  <% if current_user && current_user.admin? %>
  <%= link_to 'Show', product, class: 'btn btn-success' %>
  <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-warning' %>
  <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  <% end %>
</div>
<% end %>
