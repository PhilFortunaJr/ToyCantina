<div class="container">
  <h2>Order Information</h2>
  <strong>Order ID: </strong><%= @order.id %>
  <strong>Product Name: </strong><%= @order.product.name %>
  <strong>Product Price: </strong><%= number_to_currency(@order.product.price/1000.to_f) %>
  <strong>Total Price: </strong><%= number_to_currency(@order.total/10.to_f) %>
</div>
